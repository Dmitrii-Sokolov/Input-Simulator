<Window x:Class="InputSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputSimulator"
        mc:Ignorable="d"
        Title="Active Window Info" Height="150" Width="400">
  <StackPanel Margin="10" VerticalAlignment="Center">
    <TextBlock x:Name="TitleText" FontSize="16" Margin="0,0,0,5"/>
    <TextBlock x:Name="HandleText" Margin="0,0,0,2"/>
    <TextBlock x:Name="ProcessText"/>
  </StackPanel>
</Window>
